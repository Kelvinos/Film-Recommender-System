<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kelvin_pc.film">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/octopus"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.Search"
            android:label="Search"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.Film_List"
            android:label="Films"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleInstance" />
        <activity
            android:name=".View.Settings"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleInstance" />
        <activity
            android:name=".View.Film_Details"
            android:label="@string/title_activity_film_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.Rated"
            android:label="@string/title_activity_rated"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleInstance" />
        <activity
            android:name=".View.Recommendations"
            android:label="@string/title_activity_recommendations"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleInstance" />
        <activity
            android:name=".View.Description"
            android:label="@string/title_activity_description"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
